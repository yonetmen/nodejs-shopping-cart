<div class="row">
    <div class="col-sm-12 col-md-12">
        <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
            <button class="close" data-dismiss="alert">Ã—</button>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" alt="{{this.title}}" class="image-responsive">
                    <div class="caption">
                        <h3>{{this.title}}</h3>
                        <p class="description">{{this.description}}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{this.price}}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to
                                Shopping Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}